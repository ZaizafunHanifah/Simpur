{
    "name": "root/simpur-system",
    "description": "Root configuration for Vercel deployment",
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0",
        "laravel/tinker": "^2.10.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "frontend/app/",
            "Database\\Factories\\": "frontend/database/factories/",
            "Database\\Seeders\\": "frontend/database/seeders/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    }
}